@model CategoryUpdateDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateCategory" asp-controller="Category">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">KAtegori Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="categoryName">Kategori Adını Giriniz</label>
                                <input asp-for="Name" type="text" class="form-control" id="categoryName">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Kategori Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>