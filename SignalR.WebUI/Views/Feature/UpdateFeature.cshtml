@model FeatureUpdateDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Özellik İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateFeature" asp-controller="Feature">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Özellik Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Adını Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="Description">
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Özellik Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>