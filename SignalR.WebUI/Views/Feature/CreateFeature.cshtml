@model FeatureCreateDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Özellik İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="CreateFeature" asp-controller="Feature">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Özellik Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Adını Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="Description">
                            </div>
                     
                            <div class="card-action">
                                <button class="btn btn-primary">Özellik Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>