@model BookingCreateDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("UILayoutHead")
<body class="sub_page">
    @await Component.InvokeAsync("MenuNavbar")
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluştur
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon" asp-for="Phone" />
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Mail" />
                            </div>
                            <div>
                                <select asp-for="PersonCount" class="form-control nice-select wide">
                                    <option value="" disabled selected>
                                        Kaç Kişi Olacak?
                                    </option>
                                    <option value="">
                                        2
                                    </option>
                                    <option value="">
                                        3
                                    </option>
                                    <option value="">
                                        4
                                    </option>
                                    <option value="">
                                        5
                                    </option>
                                </select>
                            </div>
                            <div>
                                <input asp-for="CreateDate" type="date" class="form-control">
                            </div>
                            <div class="btn_box">
                                <button>
                                   Yerinizi Ayırtın
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @await Component.InvokeAsync("UILayoutFooter")
    @await Component.InvokeAsync("UILayoutScript")
</body>
</html>