@model List<SliderListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ana Sayfada Öne Çıkan Alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Lütfen sadece 1 tane öne çıkan alan verisi oluşturun.</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık 1</th>
                                    <th scope="col">Başlık 2</th>
                                    <th scope="col">Başlık 3</th>
                                    <th scope="col">Açıklama 1</th>
                                    <th scope="col">Açıklama 2</th>
                                    <th scope="col">Açıklama 3</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.SubSubTitle</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Slider/DeleteSlider/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Slider/UpdateSlider/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Slider/CreateSlider/" class="btn btn-outline-primary">Yeni Öne Çıkan Alan Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>