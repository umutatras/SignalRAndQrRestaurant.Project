@model AboutUpdateDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateAbout" asp-controller="About">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımda Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="TitleName">Başlık Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="TitleName">
                            </div>
                            <div class="form-group">
                                <label for="TitleName">Açıklama Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="TitleName">
                            </div>
                            <div class="form-group">
                                <label for="TitleName">Başlık Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="TitleName">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

