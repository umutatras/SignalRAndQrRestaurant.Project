@model List<DiscountListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık Adı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">İndirim Orani</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Amount</td>                                   
                                        <td>
                                            <a href="/Discount/DeleteDiscount/@item.Id"
                                               class="btn btn-danger">Sil</a>
                                        </td>
                                        <td><a href="/Discount/UpdateDiscount/@item.Id" class="btn btn-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-primary">Yeni İndirim Girişi</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>