@model DiscountUpdateDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateDiscount" asp-controller="Discount">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirim Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="titleName">Başlık Adını Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="titleName">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="Description">
                            </div>
                            <div class="form-group">
                                <label for="Amount">Oran Giriniz</label>
                                <input asp-for="Amount" type="text" class="form-control" id="Amount">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Resim Url Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="ImageUrl">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">İndirim Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

