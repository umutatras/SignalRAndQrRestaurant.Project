@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7250/signalrhub").build();
            $("#connstatus").text(connection.state);
            connection.start().then(() => {
                $("#connstatus").text(connection.state);
                setInterval(() => {
                    connection.invoke("SendCategoryCount");
                    connection.invoke("SendProductCount");
                    connection.invoke("SendActiveCategoryCount");
                    connection.invoke("SendPassiveCategoryCount");
                    connection.invoke("SendProductByCategoryName");
                }, 1000);


            }).catch((err) => {
                console.log(err);
            });

            connection.on("ReceiveCategoryCount", (value) => {
                $("#categoryCount").text(value);
            });

            connection.on("ReceiveProductCount", (value) => {
                $("#productCount").text(value);
            });

            connection.on("ReceiveActiveCategoryCount", (value) => {
                $("#activeCategoryCount").text(value);
            });

            connection.on("ReceivePassiveCategoryCount", (value) => {
                $("#passiveCategoryCount").text(value);
            });

            connection.on("ReceiveProductByCategoryNameHamburger", (value) => {
                $("#hamburger").text(value);
            });

            connection.on("ReceiveProductByCategoryNameDrink", (value) => {
                $("#drink").text(value);
            });

            connection.on("ReceiveProductAvgPrice", (value) => {
                $("#avgPrice").text(value);
            });

            connection.on("ReceiveProductNameMaxPrice", (value) => {
                $("#maxProduct").text(value);
            });

            connection.on("ReceiveProductNameMinPrice", (value) => {
                $("#minProduct").text(value);
            });

            connection.on("ReceiveProductPriceByHamburger", (value) => {
                $("#hamburgerFiyati").text(value);
            });

            connection.on("ReceiveTotalOrderCount", (value) => {
                $("#totalProduct").text(value);
            });

            connection.on("ReceiveTodayTotalPrice", (value) => {
                $("#todayMoney").text(value);
            });

            connection.on("ReceiveActiveOrderCount", (value) => {
                $("#aktifUrunSayisi").text(value);
            });

            connection.on("ReceiveEndOrderPrice", (value) => {
                $("#sonUrunFiyat").text(value);
            });

            connection.on("ReceiveTotalMoneyCaseAmount", (value) => {
                $("#totalKasa").text(value);
            });

            connection.on("ReceiveMenuTableCount", (value) => {
                $("#masaCount").text(value);
            });
        });
    </script>

