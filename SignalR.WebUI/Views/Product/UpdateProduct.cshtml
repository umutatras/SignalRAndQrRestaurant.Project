@model ProductUpdateDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateProduct" asp-controller="Product" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productName">Ürün Adını Giriniz</label>
                                <input asp-for="Name" type="text" class="form-control" id="productName">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="description">
                            </div>
                            <div class="form-group">
                                <label for="price">Fiyat Giriniz</label>
                                <input asp-for="Price" type="text" class="form-control" id="price">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Resim URL Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageUrl">
                            </div>
                            <div class="form-group">
                                <label for="categoryId">Kategori Seçiniz</label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.category" class="form-control" id="categoryId">
                                    <option value=""></option>
                                </select>

                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Kategori Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>