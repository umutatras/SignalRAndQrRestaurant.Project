@model List<ProductListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th> 
                                    <th></th>
                                    <th></th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a href="/Product/DeleteProduct/@item.Id"
                                               class="btn btn-danger">Sil</a>
                                        </td>
                                        <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

