@model SocialMediaUpdateDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateSocialMedia" asp-controller="SocialMedia">
                    <input type="hidden" asp-for="Id" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"> Sosyal Medya Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Sosyal Medya Başlığı Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Icon">Icon Giriniz</label>
                                <input asp-for="Icon" type="text" class="form-control" id="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Url">Url Giriniz</label>
                                <input asp-for="Url" type="text" class="form-control" id="Url">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Sosyal Medya Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

