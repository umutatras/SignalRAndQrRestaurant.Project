@model BookingCreateDto
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
               Bir Rezervasyon Yapın
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="CreateBooking" asp-controller="Booking">
                        <div>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Your Name" />
                        </div>
                        <div>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Phone Number" />
                        </div>
                        <div>
                            <input type="email" class="form-control" asp-for="Mail" placeholder="Your Email" />
                        </div>
                        <div>
                            <select asp-for="PersonCount" class="form-control nice-select wide">
                                <option value="" disabled selected>
                                    How many persons?
                                </option>
                                <option value="">
                                    2
                                </option>
                                <option value="">
                                    3
                                </option>
                                <option value="">
                                    4
                                </option>
                                <option value="">
                                    5
                                </option>
                            </select>
                        </div>
                        <div>
                            <input asp-for="CreateDate" type="date" class="form-control">
                        </div>
                        <div class="btn_box">
                            <button>
                               Rezerve Et
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
