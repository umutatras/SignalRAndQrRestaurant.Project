@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz :
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Bildirim Tipi</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Type</td>
                                        <td>@item.Description</td>
                                        <td>@item.Date</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a href="/Notification/DeleteNotification/@item.Id"
                                               class="btn btn-danger">Sil</a>
                                        </td>
                                        <td><a href="/Notification/UpdateNotification/@item.Id" class="btn btn-warning">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Notification/CreateNotification" class="btn btn-primary">Yeni Bildirim Girişi</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>